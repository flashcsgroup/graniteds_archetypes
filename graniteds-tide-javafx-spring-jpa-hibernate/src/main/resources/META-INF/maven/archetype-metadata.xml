<archetype-descriptor name="GraniteDS/Tide JavaFX Spring JPA/Hibernate">
    <modules>
        <module id="${rootArtifactId}-java" dir="java" name="${rootArtifactId}-java">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/test/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>**/*.xml</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        
        <module id="${rootArtifactId}-javafx" dir="javafx" name="${rootArtifactId}-javafx">
